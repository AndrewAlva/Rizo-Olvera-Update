mixin project(title, imgSrcs)
	picture
		if (imgSrcs.mobile)
			source(media="(max-width: 575px)" srcset="#{imgSrcs.mobile}.webp")
			source(media="(max-width: 575px)" srcset="#{imgSrcs.mobile}.jpg")

		source(srcset="#{imgSrcs.default}.webp")
		img(src="#{imgSrcs.default}.jpg", alt="Foto de #{title}")

	._overlay.hover-touch
		p.t1(data-scroll data-scroll-speed="-0.8")
			span._word-break.t1= title

			span._letter-break
				for n in title
					span.mask.inline.lh1
						span._text.t1= n
