mixin project(title, imgSrcs)
	picture
		if (imgSrcs.mobile)
			source(media="(max-width: 575px)" data-srcset="img/#{imgSrcs.mobile}.webp" type="image/webp")
			source(media="(max-width: 575px)" data-srcset="img/#{imgSrcs.mobile}.jpg" type="image/jpeg")

		source(data-srcset="img/#{imgSrcs.default}.webp" type="image/webp")
		source(data-srcset="img/#{imgSrcs.default}.jpg" type="image/jpeg")
		img.lazyload(data-src="img/#{imgSrcs.default}.jpg" src="img/0_placeholders/#{imgSrcs.default}-p.jpg" alt="Foto de #{title}")

		span.lazyload-curtain
			span.dot
			span.dot
			span.dot

	._overlay.hover-touch
		p.t1(data-scroll data-scroll-speed="-0.8")
			span._word-break.t1= title

			span._letter-break
				for n in title
					span.mask.inline.lh1
						span._text.t1= n
